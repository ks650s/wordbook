<% provide(:title, 'Tags new') %>
<h1>タグ新規作成</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @tag) do |f| %>

      <%= f.label :name, "タグ" %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.submit "作成", class: "btn btn-primary" %>
      <%= link_to "単語タグマスタ", tags_path %>
    <% end %>
  </div>
</div>