<% provide(:title, "Edit tag") %>
<h1>Update your tag</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @tag) do |f| %>
      
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.submit "Save changes", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>